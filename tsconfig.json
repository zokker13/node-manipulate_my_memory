{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "classic",
    "sourceMap": true,
    "outDir": "dist/commonjs",
    "declaration": true,
    "declarationDir": "dist/types",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*"
  ]
}